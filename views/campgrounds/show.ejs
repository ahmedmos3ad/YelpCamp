<% layout('layouts/boilerplate')%>

  <div class="row">
    <div class="col-6">
      <div class="card mb-3">
        <img src="<%=campground.image%>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title">
            <%=campground.title%>
          </h5>
          <p class="card-text">
            <%=campground.description%>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted">
            <%=campground.location%>
          </li>
          <li class="list-group-item">$<%= campground.price %>/night</li>
        </ul>
        <div class="card-body">
          <a href="/campgrounds/<%=campground._id%>/edit" class="btn btn-primary">Edit</a>
          <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="post">
            <button class="btn btn-danger">Delete Campground</button>
          </form>
        </div>
        <div class="card-footer text-muted">Some Review thing? idk</div>
      </div>
    </div>
    <div class="col-6">
      <h3>Campground Review</h3>
      <form class="form-control mb-3 validate-form" action="/campgrounds/<%=campground._id%>/reviews" method="post"
        novalidate>
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input class="form-range" type="range" min="1" id="rating" max="5" name="review[rating]" />
        </div>
        <div class="mb-3">
          <label class="form-label" for="reviewtext">Review</label>
          <textarea class="form-control" name="review[text]" id="reviewtext" required></textarea>
          <div class="valid-feedback">Looks Good!</div>
        </div>
        <button class="btn btn-info">Submit</button>
      </form>
      <% for(let review of campground.reviews) { %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">
              Rating: <%=review.rating%>
            </h5>
            <p class="card-text">
              Review: <%=review.text%>
            </p>
            <form class="d-inline" action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE"
              method="post">
              <button class="btn btn-sm btn-danger">Delete Review</button>
            </form>
          </div>
        </div>
        <% } %>
    </div>
  </div>