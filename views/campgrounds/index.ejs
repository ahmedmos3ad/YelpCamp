<% layout('layouts/boilerplate')%>

    <div id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <div><a href="Campgrounds/new">Create new Campground</a></div>
    <% for (let campground of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campground.images.length!==0 ? campground.images[0].url: 'https://res.cloudinary.com/dwa8ln1gv/image/upload/v1641945167/YelpCamp/nmizu31ctfjf4vtedyxv.jpg'%>"
                        alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title%>
                        </h5>
                        <p class="card-text">
                            <%=campground.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=campground.location%>
                            </small>
                        </p>
                        <a class="btn btn-dark" href="campgrounds/<%=campground._id %>">View</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapToken='<%- process.env.Mapbox_TOKEN %>'
                const camps={ features:<%- JSON.stringify(campgrounds)%>}
            </script>

            <script src="/javascripts/clusterMap.js"></script>